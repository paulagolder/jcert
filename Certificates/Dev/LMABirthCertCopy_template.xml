<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE sourcedocuments  PUBLIC "-//Paul Golder//DTD jcerttemplate//EN" "http://lerot.org/Templates/jcerttemplate.dtd">


 <sourcedocuments>
   <sourcedocument>
     <template>
       <templateID>LMABirthCopy</templateID>
       <version>3</version>
       <stylesheet>../Stylesheets/LMABirthCopy_stylesheet.xsl</stylesheet>
       <name>LMA Copy of an entry of Birth</name>
       <savefilepattern>Births/birth_cert.xml</savefilepattern>
       <author>Paul A Golder</author>
       <editdate>8-2-2013</editdate>
       <type>Birth certificate</type>
       <country>England</country>
     </template>
     <certificate  name="top"  objecttype ="certificate"  backgroundcolor="#84E96A"    foregroundcolor="#CB410E" >
       <styleblock name="inputcell"  bordercolor="gray"  borderwidth="1"  backgroundcolor="#E4DCDC"  />
       <hgroup bordercolor="black" borderwidth="2" />
       <hgroup name="heading"  >
         <vblock>
           <label >Baptisms solemnized in the Parish of Saint Pancras in the County of Midlesex</label>
           <hblock>
             <label >in the Year One Thousand Eight Hundred and Twenty </label>
             <input target="yeardigit" />
           </hblock>
         </vblock>
       </hgroup>
         <hgroup bordercolor="black" borderwidth="2" />
         <table name="births"    borderwidth="1"   foregroundcolor="black"    >
           <trow borderwidth="0"  >
             <tcell layout="center" >
               <label  layout="top" >
                 <text>When-</text>
                 <text>Baptised</text>
               </label>
             </tcell>
             <tcell>
               <label colspan="2" >Parent Name</label>
               <hblock>
                 <label>
                   <text>Christian</text>
                 </label>
                 <label>
                   <text>Surname</text>
                 </label>
               </hblock>
             </tcell>
             <tcell>
               <label>
                 <text>Abode</text>
               </label>
             </tcell>
             <tcell>
               <label>
                 <text>
                 </text>
                 <text>Quality, Trade or</text>
                 <text>Profession</text>
               </label>
             </tcell>
             <tcell>
               <label>
                 <text>Date of Birth and</text>
                 <text>By whom the ceremony</text>
                 <text>was performed</text>
               </label>
             </tcell>
           </trow>
           <trow   objecttype ="birth"  borderwidth="0" rows="3" >
             <tcell layout="center" >
               <input   target="date" />
               <input   target="entryNo" />
             </tcell>
             <tcell>
               <input     target="name" />
             </tcell>
             <tcell>
               <input     target="fathersForename" />
               <input     target="mothersForename" />
             </tcell>
             <tcell>
               <input     target="surname" />
             </tcell>
             <tcell>
               <input     target="residence" />
             </tcell>
             <tcell>
               <input     target="ocupation" />
             </tcell>
             <tcell>
               <input     target="dateofbirth" />
               <input     target="registrar" />
             </tcell>
           </trow>
         </table>
       </certificate>
     </sourcedocument>
   </sourcedocuments>
